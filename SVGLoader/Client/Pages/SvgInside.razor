@code{
    bool ShowSvg = true;
    string top = "0";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(1);
            top = "-100vh"; //after first render set top to -100vh
            StateHasChanged();
            await Task.Delay(1100); //after first render wait for animation to complete then remove
            ShowSvg = false;
            StateHasChanged();
        }
    }
}